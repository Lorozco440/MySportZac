<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fitsSystemWindows="true"
        android:translationY="0dp">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_record"
        app:title="@string/bar_title_record"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/gray_dark"
        app:titleTextColor="@color/white"
        app:layout_scrollFlags="scroll|enterAlways"/>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_dark">
        <LinearLayout
            android:id="@+id/lySports"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/gray_light">

            <RadioGroup
                android:id="@+id/rgSports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:checkedButton="@id/rbRunning"
                android:background="@color/white"
                android:layout_margin="0dp">

                <RadioButton

                    android:id="@+id/rbBike"
                    android:layout_weight=".3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rb_bike_bg"
                    android:onClick="loadRunsBike"
                    android:button="@null"/>

                <RadioButton

                    android:id="@+id/rbRollerSkate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/rb_rollerskate_bg"
                    android:onClick="loadRunsRollerSkate"
                    android:button="@null"/>

                <RadioButton

                    android:id="@+id/rbRunning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:background="@drawable/rb_running_bg"
                    android:onClick="loadRunsRunning"
                    android:button="@null"/>

            </RadioGroup>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/rlRecyclers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_light">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecords"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
     </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbHome"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/salmon_dark"
        android:onClick="callHome"
        android:src="@drawable/camino"
        android:translationX="-20dp"
        android:translationY="-90dp"
        app:maxImageSize="50dp"/>
</LinearLayout>